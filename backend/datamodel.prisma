type User {
  id: ID! @id
  email: String! @unique
  name: String!
  posts: [Post!]!
}

type Post {
  id: ID! @id
  title: String!
  published: Boolean! @default(value: false)
  author: User @relation(link: INLINE)
}

type Snowflakeironmen {
  id: ID! @id
  title: String!
  public: Boolean! @default(value: true)
  author: User @relation(link: INLINE)
}